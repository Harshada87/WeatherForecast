<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/border"
    android:padding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardMaxElevation="5dp"
    card_view:contentPadding="5dp">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="129dp"
        android:background="#ECEFF1">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/VolleyImageView"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher_round"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="112dp"
            android:layout_height="88dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:padding="5dp"
            card_view:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/ImageNameTextView"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="34dp"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="JSon Image Name"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewdate"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ImageNameTextView"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewtemp"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ImageNameTextView"
            android:layout_below="@+id/textViewdate"
            android:layout_marginTop="0dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewwinddirection"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ImageNameTextView"
            android:layout_below="@+id/textViewtemp"
            android:text="TextView" />

    </RelativeLayout>

</android.support.v7.widget.CardView>